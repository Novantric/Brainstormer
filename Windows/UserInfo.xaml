<Window x:Class="Brainstormer.Windows.UserInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Brainstormer.Windows"
        mc:Ignorable="d"
        Title="UserInfo" Height="300" Width="400">
    <Grid Background="Black">
        <StackPanel>
            <Label x:Name="TitleField" Content="User Info" Foreground="White" FontSize="22"/>
            <Label x:Name="EmailField" Content="Email" Foreground="White"/>
            <Label x:Name="FirstField" Content="FirstName" Foreground="White"/>
            <Label x:Name="LastField" Content="LastName" Foreground="White"/>
            <Label x:Name="PhoneField" Content="PhoneNum" Foreground="White"/>
        </StackPanel>
        <Button x:Name="SaveUserButton" Content="Save" HorizontalAlignment="Right" VerticalAlignment="Top" Height="30" Width="40" Foreground="White" Background="Black" Click="SaveUserButton_Click"/>

    </Grid>
</Window>
