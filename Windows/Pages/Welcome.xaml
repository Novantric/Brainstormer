<Page x:Class="Brainstormer.Windows.Pages.Welcome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Brainstormer.Windows.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Welcome">

    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Grid.ColumnSpan="3">

            <Label Content="Welcome!" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="36" FontWeight="Bold" Margin="40,20,40,0"/>
            <Image Source="/Windows/image-removebg-preview.png" Width="202" Opacity="0.5" Margin="40,20,40,0"/>
            <Button Content="Home" Foreground="White" Background="Black" Click="HomeButtonClick" Height="60" Width="100" Margin="40,20,40,0"/>
        </StackPanel>

    </Grid>
</Page>
