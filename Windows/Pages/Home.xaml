<Page x:Class="Brainstormer.Windows.Pages.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Brainstormer.Windows.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home">

    <Grid Background="Black">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="IdeaPanel">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Hidden" Grid.Row="0">                    
                    <StackPanel x:Name="IdeaCategoriesStackPanel">
                        <Label x:Name = "TitleLabel" Content="Fresh Ideas" Foreground="White" FontSize="20"/>
                        <StackPanel Orientation="Horizontal" x:Name="IdeaNameStackPanel" Height="60"/>
                        <StackPanel Orientation="Horizontal" x:Name="NewIdeaStackPanel" Uid="test" Height="30"/>
                    </StackPanel>                                      
                </ScrollViewer>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
